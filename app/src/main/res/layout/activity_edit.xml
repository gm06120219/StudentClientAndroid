<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.liguangming.student.EditActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Edit infomation"
        android:textSize="36dp" />

    <TextView
        android:id="@+id/tvId"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical|left"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="70dp"
        android:gravity="center_vertical|left"
        android:text="Id" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/tvId"
        android:layout_below="@+id/tvId"
        android:layout_marginTop="50dp"
        android:gravity="center_vertical|left"
        android:text="Name" />

    <TextView
        android:id="@+id/tvClassid"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/tvName"
        android:layout_below="@+id/tvName"
        android:layout_marginTop="50dp"
        android:gravity="center_vertical|left"
        android:text="Classid" />

    <TextView
        android:id="@+id/tvSex"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/tvClassid"
        android:layout_below="@+id/tvClassid"
        android:layout_marginTop="50dp"
        android:gravity="center_vertical|left"
        android:text="Sex" />

    <TextView
        android:id="@+id/tvPrev"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/tvId"
        android:layout_alignLeft="@+id/tvId"
        android:layout_marginLeft="100dp"
        android:gravity="center_vertical|left"
        android:text="" />

    <EditText
        android:id="@+id/edName"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/tvName"
        android:layout_alignLeft="@+id/tvName"
        android:layout_marginLeft="100dp"
        android:inputType="text"
        android:maxLines="1" />

    <EditText
        android:id="@+id/edClassid"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/tvClassid"
        android:layout_alignLeft="@+id/tvClassid"
        android:layout_marginLeft="100dp"
        android:inputType="text"
        android:maxLines="1" />

    <RadioGroup
        android:id="@+id/rgSex"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/tvSex"
        android:layout_toEndOf="@+id/tvSex"
        android:layout_toRightOf="@+id/tvSex"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbMale"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="Male" />

        <RadioButton
            android:id="@+id/rbFemale"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="Female" />

    </RadioGroup>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvSex"
        android:layout_alignRight="@+id/rgSex"
        android:layout_below="@+id/tvSex"
        android:layout_marginTop="50dp"
        android:text="Save" />
</RelativeLayout>
