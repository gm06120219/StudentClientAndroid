<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.liguangming.student.MainActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:text="Student System"
        android:textAlignment="center"
        android:textSize="36dp" />

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/tvTitle"
        android:layout_alignRight="@+id/tvTitle"
        android:layout_below="@+id/tvTitle"
        android:text="Login"
        android:textAlignment="center"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textUsername"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/tvSubtitle"
        android:layout_below="@+id/tvSubtitle"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif"
        android:text="Username" />

    <TextView
        android:id="@+id/textPassword"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/textUsername"
        android:layout_alignStart="@+id/textUsername"
        android:layout_below="@+id/textUsername"
        android:layout_marginTop="20dp"
        android:text="Password" />


    <TextView
        android:id="@+id/textServer"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/textPassword"
        android:layout_alignStart="@+id/textPassword"
        android:layout_below="@+id/textPassword"
        android:layout_marginTop="20dp"
        android:text="Server" />


    <EditText
        android:id="@+id/editUsername"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/textUsername"
        android:layout_toRightOf="@+id/textUsername"
        android:ems="10"
        android:inputType="text"
        android:maxLines="1"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/textPassword"
        android:layout_toRightOf="@+id/textPassword"
        android:ems="10"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editServer"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/textServer"
        android:layout_toRightOf="@+id/textServer"
        android:inputType="text"
        android:maxLines="1"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/tvTitle"
        android:layout_alignRight="@+id/tvTitle"
        android:layout_below="@+id/tvTitle"
        android:layout_marginTop="250dp"
        android:text="Login" />
</RelativeLayout>
